{
  "name": "event-resilience",
  "version": "0.1.6",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=20.12.2"
  },
  "main": "build/index.js",
  "files": [
    "build",
    "!build/bin",
    "!build/tests"
  ],
  "exports": {
    ".": "./build/index.js",
    "./commands": "./build/commands/main.js"
  },
  "keywords": [
    "adonis",
    "rabbitmq"
  ],
  "scripts": {
    "pretest": "npm run lint",
    "build": "npm run compile",
    "clean": "del-cli build",
    "precompile": "npm run lint && npm run clean",
    "compile": "tsup-node && tsc --emitDeclarationOnly --declaration",
    "postcompile": "adonis-kit index build/commands",
    "dev": "node ace serve --hmr",
    "test": "c8 node --enable-source-maps --import=ts-node-maintained/register/esm bin/test.ts",
    "lint": "eslint --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "index:commands": "adonis-kit index build/commands"
  },
  "devDependencies": {
    "@adonisjs/core": "^6.17.0",
    "@adonisjs/eslint-config": "^2.0.0-beta.6",
    "@adonisjs/prettier-config": "^1.4.0",
    "@adonisjs/tsconfig": "^1.4.0",
    "@japa/assert": "^3.0.0",
    "@japa/expect-type": "^2.0.3",
    "@japa/plugin-adonisjs": "^3.0.1",
    "@japa/runner": "^3.1.4",
    "@swc/core": "1.10.1",
    "@types/node": "^22.10.2",
    "c8": "^10.1.3",
    "cross-env": "^7.0.3",
    "del-cli": "^6.0.0",
    "eslint": "^9.17.0",
    "hot-hook": "^0.4.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.2",
    "reflect-metadata": "^0.2.2",
    "ts-node-maintained": "^10.9.4",
    "tsup": "^8.3.6",
    "typescript": "~5.7"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.17.0"
  },
  "peerDependenciesMeta": {
    "@adonisjs/core": {}
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/app"
  },
  "prettier": "@adonisjs/prettier-config",
  "tsup": {
    "entry": [
      "./index.ts",
      "./commands/example.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": false,
    "sourcemap": true,
    "target": "esnext"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "c8": {
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "homepage": "https://github.com/rolmen26/event-resilience",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rolmen26/event-resilience.git"
  }
}
